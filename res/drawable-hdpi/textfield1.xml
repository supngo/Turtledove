<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient android:endColor="@color/white0" android:startColor="#C2C2C2" android:angle="270"/>
			<stroke android:width="1dp" android:color="#5E5E5E"/>
			<padding android:left="5dp" android:top="0dp" android:right="5dp" android:bottom="0dp" />
			<corners android:radius="6dp" />
		</shape>
	</item>

	<item android:state_focused="true">
		<shape>
			<gradient android:endColor="@color/white0" android:startColor="#F5CCB0" android:angle="270"/>
			<stroke android:width="3dp" android:color="#CD2626"/>
			<padding android:left="5dp" android:top="0dp" android:right="5dp" android:bottom="0dp" />
			<corners android:radius="6dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient android:endColor="@color/white0" android:startColor="#C2C2C2" android:angle="270"/>
			<stroke android:width="1dp" android:color="#5E5E5E"/>
			<padding android:left="5dp" android:top="0dp" android:right="5dp" android:bottom="0dp" />
			<corners android:radius="6dp" />
		</shape>
	</item>
</selector>