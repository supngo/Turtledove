<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" 
	android:layout_width="fill_parent" android:layout_height="wrap_content">
    		
		<ImageView android:id="@+id/guest_icon" android:layout_width="46dp" android:layout_height="46dp" 
		    android:contentDescription="@string/guestlist" android:paddingTop="3dp" android:paddingLeft="1dp"/>
			
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:layout_width="fill_parent" android:id="@+id/guest_name"
				android:layout_height="wrap_content" android:textStyle="bold" android:textColor="@color/white2"
				android:paddingLeft="10dp" android:paddingTop="0dp" android:textSize="20sp"/>
				
			<TextView android:layout_width="fill_parent" android:id="@+id/guest_number" android:textStyle="italic|bold"
				android:layout_height="wrap_content" android:paddingLeft="10dp" android:paddingBottom="0dp"
				android:textColor="@color/white2" android:textSize="17sp"/>
		</LinearLayout>
</LinearLayout>
